<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/warningLight</item>
        <item name="android:windowBackground">@color/warmWhite</item>
        <item name="buttonBarPositiveButtonStyle">@style/sysButtonsStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ListHeaders">
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorListHeadersWrapper">
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#691d1d</item>
        <item name="android:background">@drawable/rounded_corner_error</item>
    </style>


    <style name="sysButtonsStyle">
        <item name="android:background">@drawable/gradient</item>
    </style>

    <style name="buttonsStyle">
        <item name="android:background">@drawable/gradient</item>
    </style>

    <style name="buttonsStyleRev">
        <item name="android:background">@drawable/gradient_reversed</item>
    </style>

    <style name="WarningListHeadersWrapper">
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#4f4300</item>
        <item name="android:background">@drawable/rounded_corner_warning</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
